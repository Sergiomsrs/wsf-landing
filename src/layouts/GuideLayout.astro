---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href={`${import.meta.env.BASE_URL}logo-navegador.webp`}
        />
        <meta name="generator" content={Astro.generator} />
        <title>Guía de Uso - WorkSchedFlow</title>
        <meta
            name="description"
            content="Aprende a usar WorkSchedFlow con nuestra guía completa de uso"
        />
    </head>
    <body class="text-white min-h-screen guide-body">
        <!-- Background gradient -->
        <div
            class="fixed inset-0 bg-gradient-to-b from-slate-800 via-slate-900 to-slate-950"
        >
        </div>



        <div class="relative z-10">
            <slot />
        </div>
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
    }

    body.guide-body {
        margin: 0;
        overflow-x: hidden;
        background-color: #020617;
    }

    @media (prefers-reduced-motion: no-preference) {
        .floating-orb {
            animation: float 20s ease-in-out infinite;
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) translateX(0px);
        }
        33% {
            transform: translateY(-10px) translateX(5px);
        }
        66% {
            transform: translateY(5px) translateX(-5px);
        }
    }
</style>
