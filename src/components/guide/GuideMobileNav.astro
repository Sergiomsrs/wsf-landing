---
import type { GuideCategory } from "../../data/guideData";

interface Props {
    categories: GuideCategory[];
}

const { categories } = Astro.props;
---

<div class="mobile-nav-wrapper">
    <button class="mobile-nav-toggle" id="mobileNavToggle">
        <svg
            class="menu-icon"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <span>Navegación</span>
    </button>

    <div class="mobile-nav-overlay" id="mobileNavOverlay"></div>

    <aside class="mobile-nav" id="mobileNav">
        <div class="mobile-nav-header">
            <h2 class="mobile-nav-title">Guía de Uso</h2>
            <button class="mobile-nav-close" id="mobileNavClose">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <nav class="mobile-nav-content">
            {
                categories.map((category) => (
                    <div class="category-section">
                        <h3 class="category-title">{category.title}</h3>
                        <ul class="section-list">
                            {category.sections.map((section) => (
                                <li>
                                    <a
                                        href={`#${section.id}`}
                                        class="section-link"
                                        data-mobile-link
                                    >
                                        {section.title}
                                    </a>
                                    {section.subsections &&
                                        section.subsections.length > 0 && (
                                            <ul class="subsection-list">
                                                {section.subsections.map(
                                                    (subsection) => (
                                                        <li>
                                                            <a
                                                                href={`#${subsection.id}`}
                                                                class="subsection-link"
                                                                data-mobile-link
                                                            >
                                                                {
                                                                    subsection.title
                                                                }
                                                            </a>
                                                        </li>
                                                    ),
                                                )}
                                            </ul>
                                        )}
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </nav>
    </aside>
</div>

<style>
    .mobile-nav-wrapper {
        display: none;
    }

    @media (max-width: 1024px) {
        .mobile-nav-wrapper {
            display: block;
        }

        .mobile-nav-toggle {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 40;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: rgba(15, 23, 42, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(148, 163, 184, 0.2);
            border-radius: 0.5rem;
            color: white;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .mobile-nav-toggle:hover {
            background: rgba(120, 119, 198, 0.2);
            border-color: #7877c6;
        }

        .menu-icon {
            width: 1.5rem;
            height: 1.5rem;
        }

        .mobile-nav-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            z-index: 45;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }

        .mobile-nav-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .mobile-nav {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 80%;
            max-width: 320px;
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            z-index: 50;
            transform: translateX(-100%);
            transition: transform 0.3s;
            overflow-y: auto;
            border-right: 1px solid rgba(148, 163, 184, 0.2);
        }

        .mobile-nav.active {
            transform: translateX(0);
        }

        .mobile-nav-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        }

        .mobile-nav-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: white;
            margin: 0;
        }

        .mobile-nav-close {
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            padding: 0.25rem;
            transition: color 0.2s;
        }

        .mobile-nav-close:hover {
            color: white;
        }

        .mobile-nav-close svg {
            width: 1.5rem;
            height: 1.5rem;
        }

        .mobile-nav-content {
            padding: 1.5rem;
        }

        .category-section {
            margin-bottom: 2rem;
        }

        .category-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #94a3b8;
            margin-bottom: 0.75rem;
        }

        .section-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .section-list > li {
            margin-bottom: 0.25rem;
        }

        .section-link {
            display: block;
            padding: 0.5rem 0.75rem;
            color: #cbd5e1;
            text-decoration: none;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .section-link:hover {
            color: white;
            background: rgba(120, 119, 198, 0.1);
        }

        .subsection-list {
            list-style: none;
            padding-left: 1.25rem;
            margin: 0.25rem 0;
        }

        .subsection-link {
            display: block;
            padding: 0.375rem 0.75rem;
            color: #94a3b8;
            text-decoration: none;
            border-radius: 0.375rem;
            font-size: 0.8125rem;
            transition: all 0.2s;
        }

        .subsection-link:hover {
            color: #cbd5e1;
            background: rgba(120, 119, 198, 0.08);
        }
    }
</style>

<script>
    const toggle = document.getElementById("mobileNavToggle");
    const nav = document.getElementById("mobileNav");
    const overlay = document.getElementById("mobileNavOverlay");
    const close = document.getElementById("mobileNavClose");
    const links = document.querySelectorAll("[data-mobile-link]");

    function openNav() {
        nav?.classList.add("active");
        overlay?.classList.add("active");
        document.body.style.overflow = "hidden";
    }

    function closeNav() {
        nav?.classList.remove("active");
        overlay?.classList.remove("active");
        document.body.style.overflow = "";
    }

    toggle?.addEventListener("click", openNav);
    close?.addEventListener("click", closeNav);
    overlay?.addEventListener("click", closeNav);

    links.forEach((link) => {
        link.addEventListener("click", closeNav);
    });
</script>
