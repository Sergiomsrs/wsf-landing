---
import type { GuideSection as GuideSectionType } from "../../data/guideData";

interface Props {
    section: GuideSectionType;
}

const { section } = Astro.props;

// Helper function to parse markdown-like syntax
function parseMarkdown(text: string) {
    return text
        .replace(/\*\*(.*?)\*\*/g, "<strong>$1</strong>")
        .replace(/\*(.*?)\*/g, "<em>$1</em>");
}
---

<section id={section.id} class="guide-section">
    <h2 class="section-title">{section.title}</h2>

    {
        section.content && (
            <div
                class="section-content"
                set:html={parseMarkdown(section.content)}
            />
        )
    }

    {
        section.image && (
            <div class="section-image">
                <img src={section.image} alt={section.title} loading="lazy" />
            </div>
        )
    }

    {
        section.subsections && section.subsections.length > 0 && (
            <div class="subsections">
                {section.subsections.map((subsection) => (
                    <div id={subsection.id} class="subsection">
                        <h3 class="subsection-title">{subsection.title}</h3>
                        {subsection.content && (
                            <p
                                class="subsection-content"
                                set:html={parseMarkdown(subsection.content)}
                            />
                        )}

                        {subsection.image && (
                            <div class="subsection-image">
                                <img
                                    src={subsection.image}
                                    alt={subsection.title}
                                    loading="lazy"
                                />
                            </div>
                        )}

                        {subsection.features &&
                            subsection.features.length > 0 && (
                                <ul class="feature-list">
                                    {subsection.features.map((feature) => (
                                        <li set:html={parseMarkdown(feature)} />
                                    ))}
                                </ul>
                            )}
                    </div>
                ))}
            </div>
        )
    }

    {
        section.note && (
            <div class="note-box">
                <div class="note-icon">ðŸ’¡</div>
                <div
                    class="note-content"
                    set:html={parseMarkdown(section.note)}
                />
            </div>
        )
    }

    {
        section.video && (
            <div class="video-section">
                <h4 class="video-title">Ver demostraciÃ³n en video</h4>
                <a
                    href={section.video}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="video-link"
                >
                    <svg
                        class="w-6 h-6"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M8 5v14l11-7z" />
                    </svg>
                    Ver video
                </a>
            </div>
        )
    }
</section>

