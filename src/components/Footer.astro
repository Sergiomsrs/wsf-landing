// Footer component
---

<footer class="py-16 px-6 border-t border-slate-700/50 bg-slate-900/50">
    <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-4 gap-8 mb-8">
            <!-- Brand section -->
            <div class="md:col-span-2">
                <!-- Logo/Brand area -->
                <div class="flex items-center mb-6">
                    <img
                        src="./logo2.webp"
                        alt="WorkSchedFlow Logo"
                        width="48"
                        height="48"
                        class="mr-4"
                    />
                    <div>
                        <h3 class="text-xl font-bold text-white">
                            WorkSchedFlow
                        </h3>
                        <p class="text-emerald-400 text-sm font-medium">
                            Prueba de Concepto
                        </p>
                    </div>
                </div>

                <!-- Enhanced disclaimer -->
                <div
                    class="bg-slate-800/30 rounded-lg p-4 border border-slate-700/30 mb-6"
                >
                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 mt-0.5">
                            <svg
                                width="18"
                                height="18"
                                fill="currentColor"
                                class="text-amber-400"
