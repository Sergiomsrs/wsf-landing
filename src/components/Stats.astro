// Stats and testimonials section
---

<section class="py-24 px-6 relative">
    <!-- Background overlay - darkest section -->
    <div class="absolute inset-0 bg-slate-950/90 pointer-events-none"></div>

    <div class="max-w-6xl mx-auto relative z-10">
        <!-- Stats -->
        <div class="grid md:grid-cols-4 gap-8 mb-20">
            <div class="text-center group">
                <div
                    class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300"
                >
                    500+
                </div>
                <p class="text-gray-400 font-medium">Proyectos completados</p>
            </div>
            <div class="text-center group">
                <div
                    class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300"
                >
                    50K+
                </div>
                <p class="text-gray-400 font-medium">Usuarios activos</p>
            </div>
            <div class="text-center group">
                <div
                    class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-cyan-400 to-teal-400 bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300"
                >
                    99.9%
                </div>
                <p class="text-gray-400 font-medium">Tiempo de actividad</p>
            </div>
            <div class="text-center group">
                <div
                    class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-teal-400 to-green-400 bg-clip-text text-transparent mb-2 group-hover:scale-110 transition-transform duration-300"
                >
                    24/7
